generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Shop {
  id String @id @default(uuid())
  url String
  shopifyShopId String? // Shopify's numeric shop ID (for webhook lookups)
  accessToken String?
  uninstalledAt DateTime? // When the app was uninstalled (null = installed)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Form Form[]
  shippingSettings ShippingSettings?
  shippingFees ShippingFee[]
  onboardingProgress OnboardingProgress?
  subscriptions Subscription[]
  trackingPixels TrackingPixel[]
}

model TrackingPixel {
  id String @id @default(uuid())
  shopId String
  provider String // 'facebook' | 'tiktok' | 'snapchat' | 'google'
  name String? // Optional label (e.g. "Main pixel")
  // Facebook (and similar) fields
  pixelId String
  conversionApiToken String?
  testToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([shopId, provider])
}

model Form {
  id String @id @default(uuid())
  shopId String
  name String
  fields Json
  settings Json?
  thankYouPage Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id])
}

model Country {
  id String @id @default(uuid())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  states State[]
}

model State {
  id String @id @default(uuid())
  countryId String
  code String
  name String
  nameAr String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  country Country @relation(fields: [countryId], references: [id], onDelete: Cascade)
  cities City[]
  shippingFees ShippingFee[]
}

model City {
  id String @id @default(uuid())
  stateId String
  name String
  nameAr String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  state State @relation(fields: [stateId], references: [id], onDelete: Cascade)
}

model ShippingSettings {
  id String @id @default(uuid())
  shopId String @unique
  method String // 'free' or 'per-province'
  stopDeskEnabled Boolean @default(false)
  codLabel String? // Custom label for Cash on Delivery
  stopDeskLabel String? // Custom label for Stop Desk
  freeShippingLabel String? // Custom label for Free Shipping
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
}

model ShippingFee {
  id String @id @default(uuid())
  shopId String
  stateId String
  cashOnDelivery Int? // Nullable, stored as integer
  stopDesk Int? // Nullable, stored as integer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
  state State @relation(fields: [stateId], references: [id], onDelete: Cascade)

  @@unique([shopId, stateId])
  @@index([shopId])
  @@index([stateId])
}

model OnboardingProgress {
  id String @id @default(uuid())
  shopId String @unique
  completedSteps String[] // Array of step IDs that are completed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)
}

model Subscription {
  id String @id @default(uuid())
  shopId String
  shopifyChargeId String? // Shopify charge ID
  status String // Status: active, cancelled, expired, pending, etc.
  startedAt DateTime // When the subscription started
  expiresAt DateTime? // Expiration date (null for recurring subscriptions)
  billingCycle String? // 'monthly' or 'yearly'
  price Float? // Subscription price
  currencyCode String? @default("USD") // Currency code
  cancelledAt DateTime? // When the subscription was cancelled
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([status])
  @@index([shopifyChargeId])
}
