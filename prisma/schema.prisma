generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Shop {
  id String @id @default(uuid())
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Form Form[]
}

model Form {
  id String @id @default(uuid())
  shopId String
  name String
  fields Json
  settings Json?
  thankYouPage Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shop Shop @relation(fields: [shopId], references: [id])
}

